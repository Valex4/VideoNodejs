<a href="/libros/crear" class="btn btn-primary" type="button">Registrar Planta</a>
<a href="/libros/registroHerramienta" class="btn btn-primary" type="button">Registrar Herramienta</a>
<br /><br />


<h2>Plantas</h2>
    <table class="table table-dark">
        <thead class="thead-dark">
            <tr>
                <th>#</th>
                <th>ID</th>
                <th>Nombre</th>
                <th>Categoria</th>
                <th>Precio</th>
                <th>Stock</th>
                <th>Imagen</th>
                <th>Opciones</th>
            </tr>
        </thead>
        <tbody>
            <% for( let libro = 0; libro < libros.length; libro++ ) { %>
                <tr>
                    <td><%- libro+1 %> </td>
                    <td> <%= libros[libro].id_producto %> </td>
                    <td> <%= libros[libro].nombre %> </td>
                    <td> <%= libros[libro].categoria %> </td>
                    <td> <%= libros[libro].precio %> </td>
                    <td> <%= libros[libro].stock %> </td>
                    <td>
                        <img class="img-thumbnail" width="100" src="/images/<%= libros[libro].imagen %> " alt="">

                        </td>
                    <td>
                        <div class="btn-group-vertical" role="group" aria-label="Vertical button group">
                            <form class="form-inline" method="get" action="/libros/editar/<%= libros[libro].id_producto %>">
                                <button class="btn btn-warning" type="submit">Editar</button>
                            </form>
                        </div>
                        
                        
                        <div class="btn-group-vertical" role="group" aria-label="Vertical button group">
                            <form class="form-inline" method="post" action="/libros/eliminar/<%= libros[libro].id_producto %>">
                                <button class="btn btn-danger" type="submit">Eliminar</button>
                            </form>
                        </div> 
                     </td>
                </tr>   
            <% } %>
           
    
        </tbody>
    </table>
    <br>
